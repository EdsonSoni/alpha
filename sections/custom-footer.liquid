  "name": {
      "en": "Custom footer",
      "es": "Footer personalizado"
  },
  "class": "Footer section",
  "max_blocks": 4,
  "blocks": [
  {
    "type": "link_list",
    "name": {
        "en": "Menu",
        "es": "Menú"
    },
    "settings": [
    {
    "type": "text",
    "id": "menu_title",
    "label": {
       "en": "Menu title",
       "es": "Titulo de menú"
    }
    },
    {
     "type": "link_list",
     "id": "selected_menu",
     "label": {

        "en": "Menu",
        "es": "Menú"
     }

    }
    ]
  },
  {
    "type": "text",
    "name": {
      "en": "Contact info",
      "es": "Información de contacto"
    },
    "settings": [
    {
      "type": "text",
      "id": "contact_title",
      "label": {
        "en": "Contact title",
        "es": "Título de contacto"
      }
    },
    {
      "type": "text",
      "id": "phone_number",
